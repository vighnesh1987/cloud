<%= content_for :title, "User: Register"%>

<%= form_for(@user, :url =>{:action => :post_register} ) do |f| %>
<table class="middle">
    <tr>
      <td> <%= f.label :first_name, "First name: " %> </td>
      <td> <%= f.text_field :first_name %> </td> 
    </tr>
    <tr>
      <td> <%= f.label :last_name, "Last name: " %> </td>
      <td> <%= f.text_field :last_name %> </td> 
    </tr>
    <tr>
      <td> <%= f.label :login, "Login: " %> </td>
      <td> <%= f.text_field :login %> </td> 
    </tr>
    <tr>
      <td> <%= f.label :email, "Enter email address: " %> </td>
      <td> <%= f.text_field :email %> </td> 
    </tr>
    <tr>
      <td> <%= f.label :email_confirmation, "Confirm email address: " %> </td>
      <td> <%= f.text_field :email_confirmation%> </td> 
    </tr>
    <tr>
      <td> <%= f.label :password, "Enter password: " %> </td>
      <td> <%= f.password_field :password %> </td> 
    </tr>
    <tr>
      <td> <%= f.label :password_confirmation, "Confirm password: " %> </td>
      <td> <%= f.password_field :password_confirmation%> </td> 
    </tr>
    <tr>
      <td> <%= f.submit("Register!") %> </td>
    </tr>
</table>
<% end %>

<%#= render :partial => "shared/fb_reg"%>

